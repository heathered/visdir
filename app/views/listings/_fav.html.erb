<% if session[:fav].include?(params[:id].to_i) %>
  <%= link_to "Add to Favs", { controller: 'listings', action: 'fav', id: params[:id] }, id: "card-#{params[:id]}", class: 'card-fav', remote: true %>
<% else %>
  <%= link_to "Remove from Favs", { controller: 'listings', action: 'fav', id: params[:id] }, id: "card-#{params[:id]}", class: 'card-fav card-is-faved', remote: true %>
<% end %>