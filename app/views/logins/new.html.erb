<div id="login_form">
<%= form_tag create_login_path do %>
  <p>
  <%= label_tag :email %>
  <%= text_field_tag :email, params[:email] %>
  </p>

  <p>
  <%= label_tag :password %>
  <%= password_field_tag :password, params[:password] %>
  </p>

  <%= submit_tag "Login", :id => "submit" %>
<% end %>
</div>